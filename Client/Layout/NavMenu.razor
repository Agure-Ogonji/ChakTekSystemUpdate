@attribute [Authorize]
        <div class="top-row ps-3 navbar navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/home/dashboard">

                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </a>
                <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
<div class="nav-scrollable"  @onclick="ToggleNavMenu">
            <nav class="flex-column">
                
                <AuthorizeView Roles="Admin">
                <Authorized>
                <div class="nav-item px-3">
                        <NavLink class="nav-link p-2" @onclick="ShowAdminMenuContainer" style="cursor:pointer; margin-left:-1rem;" href="javascript:void()">
                            <div class="hstack gap-1">
                            <span class="bi bi-person-fill fs-3 text-center" aria-hidden="true" style="margin-left:1rem; margin-top:-1rem;"></span>
                            <span style="margin-left:1rem; margin-top:1rem;">Administration</span>
                            </div>
                        </NavLink>
                        <a class="nav-link p-2 text-white" style="margin-left:1rem; visibility:@CssStyle">
                            <div class="hstack" @onclick="UserClicked">
                                <span class="bi bi-people fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Users</span>
                            </div>
                        </a>
                    </div>
                </Authorized>
            </AuthorizeView>
            <div class="nav-item px-3" style="margin-top:@DepartmentMargin">
            <NavLink class="nav-link p-2" @onclick="ShowDepartmentContainer" style="cursor:pointer; margin-left:-1rem;" href="javascript:void()">
                        <div class="hstack gap-1">
                    <span class="bi bi-backpack4-fill fs-3 text-center" aria-hidden="true" style="margin-left:1rem; margin-top:3rem;"></span>
                            <span style ="margin-left:1rem; margin-top:5rem;">Management</span>
                        </div>
                    </NavLink>
                    <div class="nav-link p-2 text-white" style="margin-left:1rem;margin-top:1rem; visibility:@DepartmentCssStyle;">
                        <ul class="list-group">
                            <li class="cursorStyle" style="list-style:none;">
                                <a class="nav-link p-2" @onclick="GeneralDepartmentClicked">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-file-medical fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                        <span class="fs-6">General Dep</span>
                                    </div>
                                </a>
                            </li>
                            <li class="cursorStyle" style="list-style:none;" @onclick="DepartmentClicked">
                                <a class="nav-link p-2">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-substack fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                        <span class="fs-6">Department</span>
                                    </div>
                                </a>
                            </li>
                            <li class="cursorStyle" style="list-style:none;" @onclick="BranchClicked">
                                <a class="nav-link p-2">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-chevron-bar-contract fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                        <span class="fs-6">Branch</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none;">
                                <hr/>
                            </li>
                            <li class="cursorStyle" style="list-style:none;" @onclick="CountryClicked">
                                <a class="nav-link p-2">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-geo-alt fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                        <span class="fs-6">Country</span>
                                    </div>
                                </a>
                            </li>
                            <li class="cursorStyle" style="list-style:none;" @onclick="CityClicked">
                                <a class="nav-link p-2">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-pin-map-fill fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                        <span class="fs-6">City</span>
                                    </div>
                                </a>
                            </li>
                            <li class="cursorStyle" style="list-style:none;" @onclick="TownClicked">
                                <a class="nav-link p-2">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-geo fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                        <span class="fs-6">Town</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none;">
                                <hr/>
                            </li>

                            <li class="cursorStyle" style="list-style:none;" @onclick="OvertimeTypeClicked">
                                <a class="nav-link p-2">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-stopwatch fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span class="fs-6">Overtime Type</span>
                                    </div>
                                </a>
                            </li>
                    <li class="cursorStyle" style="list-style:none;" @onclick="SanctionTypeClicked">
                                <a class="nav-link p-2">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-x-octagon fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span class="fs-6">Sanction Type</span>
                                    </div>
                                </a>
                            </li>
                    <li class="cursorStyle" style="list-style:none;" @onclick="VacationTypeClicked">
                                <a class="nav-link p-2">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-backpack3 fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span class="fs-6">Vacation Type</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none;">
                                <hr/>
                            </li>

                            <li class="cursorStyle" style="list-style:none;" @onclick="EmployeeClicked">
                                <a class="nav-link p-2">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-people-fill fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                        <span class="fs-6">Employee</span>
                                    </div>
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>

            </nav>
        </div>

<style>
    .cursorStyle{
        cursor: pointer;
    }
</style>
@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    public string DepartmentMargin { get; set; } = "-3.5rem";
    private string CssStyle = "hidden";
    public bool ShowHide { get; set; } = false;

    private void ShowAdminMenuContainer()
    {
        ShowHide = !ShowHide;
        if (ShowHide)
        {
            DepartmentMargin = "0";
            CssStyle = "visible";
        }
        else
        {
            DepartmentMargin = "-3.5rem";
            CssStyle = "hidden";
        }

    }
    private string DepartmentCssStyle = "hidden";
    public bool ShowHideDepartment { get; set; } = false;
    private void ShowDepartmentContainer()
    {
        ShowHideDepartment = !ShowHideDepartment;
        if (ShowHideDepartment)
            DepartmentCssStyle = "visible";
        else
            DepartmentCssStyle = "hidden";
    }


    //GENERAL DEPARTMENT, DEPARTMENT, AND BRANCH
    void GeneralDepartmentClicked() => allStates.GeneralDepartmentClicked(); 
    void DepartmentClicked() => allStates.DepartmentClicked(); 
    void BranchClicked() => allStates.BranchClicked();

    //COUNTRY, CITY, AND TOWN
    void CountryClicked() => allStates.CountryClicked();
    void CityClicked() => allStates.CityClicked();
    void TownClicked() => allStates.TownClicked();

    //USER
    void UserClicked() => allStates.UserClicked();
    
    //OVERTIME, VACATION AND SANCTION
    void OvertimeTypeClicked() => allStates.OvertimeTypeClicked();
    void SanctionTypeClicked() => allStates.SanctionTypeClicked();
    void VacationTypeClicked() => allStates.VacationTypeClicked();

    //EMPLOYEE
    void EmployeeClicked() => allStates.EmployeeClicked();
}
